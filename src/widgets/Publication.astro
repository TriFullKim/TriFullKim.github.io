---
import Paper from "../components/Paper.astro";

const posts = await Astro.glob("../pages/post/publication/*.md");
posts.reverse();
---

{posts[0].frontmatter.title}
<div class="flex flex-col gap-5">
  {
    posts.map((data, idx) => (
      <>
        <ul>
          <Paper
            title={data.frontmatter.title}
            me={data.frontmatter.me}
            author={data.frontmatter.author}
            publishedDate={data.frontmatter.pubDate}
            confName={data.frontmatter.confName}
            category={data.frontmatter.category}
            postscript={data.frontmatter.postscript}
            international={data.frontmatter.international}
            paperUrl={data.frontmatter.paperUrl}
            codeUrl={data.frontmatter.codeUrl}
          />
        </ul>
        {!(posts.length === idx + 1) && <div class="divider my-[-1.1rem]" />}
      </>
    ))
  }
</div>

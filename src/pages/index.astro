---
import myLogo from "~/../public/tfk-w.svg";

import Image from "astro/components/Image.astro";
import Layout from "~/layouts/Layout.astro";
---

<Layout title="TriFullKim" id="main">
  <main>
    <section>HeroSection:RecentOrHighlight</section>
    <section>BlogPost</section>
  </main>
</Layout>

<style>
  .horizontal {
    @apply flex flex-row items-center;
  }

  header > h1 {
    font-size: 1.8rem;
  }
  header {
    background-color: #4d4d4d;
    color: #fff;
    font-size: 1.4rem;
    font-weight: 400;
    font-family:
      Source Code Pro,
      "Consolas",
      "Courier New",
      Courier,
      monospace;
  }
</style>

    <HomeProfile />
  </div>
</Layout>

<style>
  .horizontal {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  header > h1 {
    font-size: 1.8rem;
  }
  header {
    background-color: #4d4d4d;
    color: #fff;
    font-size: 1.4rem;
    font-weight: 400;
    font-family:
      Source Code Pro,
      "Consolas",
      "Courier New",
      Courier,
      monospace;
  }
</style>

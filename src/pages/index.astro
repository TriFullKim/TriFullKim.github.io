---
import { Button } from "@/components/ui/button";
import Layout from "~/layouts/Layout.astro";
import About from "./about.astro";
---

<div class="container mx-auto p-4">
  <div class="mb-4">
    <Button client:load>Shadcn Button</Button>
  </div>
  <About />
</div>

<style>
  .horizontal {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  header > h1 {
    font-size: 1.8rem;
  }
  header {
    background-color: #4d4d4d;
    color: #fff;
    font-size: 1.4rem;
    font-weight: 400;
    font-family:
      Source Code Pro,
      "Consolas",
      "Courier New",
      Courier,
      monospace;
  }
</style>

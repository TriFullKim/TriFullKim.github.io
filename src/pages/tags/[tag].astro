---
import { getCollection } from 'astro:content';
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat().filter(Boolean))];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags?.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={`Posts tagged with #${tag} @TriFullKim`}>
  <main class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-3xl font-bold mb-8">Posts tagged with <span class="text-primary">#{tag}</span></h1>
    <ul class="space-y-4">
      {posts.map((post) => (
        <li class="border-b border-gray-200 dark:border-gray-700 last:border-0 pb-4 last:pb-0">
          <a href={`/post/${post.slug}`} class="block group">
            <h2 class="text-xl font-semibold group-hover:text-primary transition-colors">{post.data.title}</h2>
            <div class="text-gray-500 text-sm mt-1">{post.data.date.toLocaleDateString()}</div>
             {post.data.description && <p class="text-gray-600 dark:text-gray-300 mt-2">{post.data.description}</p>}
          </a>
        </li>
      ))}
    </ul>
    <div class="mt-8" id="back-link">
        <a href="/post" class="text-primary hover:underline">← 포스트로 돌아가기</a>
    </div>
  </main>
</Layout>

<script>
  const params = new URLSearchParams(window.location.search);
  const fromSlug = params.get('from');
  if (fromSlug) {
    const backLink = document.getElementById('back-link');
    if (backLink) {
      backLink.innerHTML = `<a href="/post/${fromSlug}" class="text-primary hover:underline">← 이전 포스트로 돌아가기</a>`;
    }
  }
</script>

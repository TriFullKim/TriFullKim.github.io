---
import { Image } from "astro:assets";
const {
  src = "./favicon.svg",
  name = "@Name",
  mail = "youe@mail.domain",
  class: className,
} = Astro.props;

const introduction = "Hello World!";
---

<div
  class:list={["HeroBundle flex", "md:flex-row", "flex-col", "p-5", className]}
>
  <div class="content-center shrink-0 mr-5">
    {typeof src === "string" ? (
      <img src={src} width="150px" />
    ) : (
      <Image src={src} alt={name} widths={[96, 150, 192]} sizes="150px" />
    )}
  </div>
  <div class="content-center">
    <h2>{name}</h2>
    <slot>
      <p>{introduction}</p>
    </slot>
    <a href={"mailto:" + mail} class="font-mono badge badge-info">
      {mail}
    </a>
  </div>
</div>
<style>
  .HeroBundle {
    font-size: 1.15rem;
  }
  .HeroBundle h2 {
    font-weight: 700;
    font-size: 2rem;
  }
  .HeroBundle a {
    font-size: 1rem;
  }
</style>
